{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 160
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "double",
      "trailingCommas": "all",
      "bracketSameLine": false,
      "arrowParentheses": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": {
        "useBlockStatements": "error",
        "useConsistentTypeDefinitions": {
          "level": "error",
          "options": {
            "style": "type"
          }
        }
      },
      "complexity": {
        "useArrowFunction": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": [
      "**/*.js",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.md",
      "!**/dist/**",
      "!**/build/**",
      "!**/cdk.out/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/expense-tracker/**",
      "!**/ema-pulse/**",
      "!**/vendor/**",
      "!**/Pods/**"
    ]
  }
}
