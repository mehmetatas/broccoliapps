    "@broccoliapps/shared": "*"
  },
  "peerDependencies": {
    "hono": "^4.11.3",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
