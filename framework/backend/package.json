{
  "name": "@broccoliapps/backend",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/http/index.js",
  "types": "dist/http/index.d.ts",
  "exports": {
    "./http": {
      "types": "./dist/http/index.d.ts",
      "import": "./dist/http/index.js"
    },
    "./http/api": {
      "types": "./dist/http/api/index.d.ts",
      "import": "./dist/http/api/index.js"
    },
    "./http/page": {
      "types": "./dist/http/page/index.d.ts",
      "import": "./dist/http/page/index.js"
    },
